<?xml version="1.0" encoding="UTF-8"?>
<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0 http://maven.apache.org/xsd/settings-1.0.0.xsd">

    <!-- ... other elements ... -->

    <!-- ... This whole file should already be in your own .m2 folder -->
    <servers>
        <!-- ...other servers ... -->
        <!-- ... Cut and paste this server element and content into your own .m2 settings.xml -->
        <server>
            <!--> Use this server <id> value as your project pom's <settingsKey> value-->
            <!-- <id> value is just a unique label; "/postgres" is owned by [LOCAL_DB_ADMIN] -->
            <!-- [LOCAL_DB_ADMIN] should then have the correct privilege to drop other DBs -->
            <id>jdbc:postgresql://localhost:5432/postgres</id>
            <username>[LOCAL_DB_ADMIN]</username>
            <password>LOCAL_DB_PASSWORD]</password>
        </server>
    </servers>

</settings>